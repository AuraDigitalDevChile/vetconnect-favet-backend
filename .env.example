# VetConnect FAVET - Variables de Entorno
# Copiar este archivo como .env y configurar los valores reales

# ==========================================
# BASE DE DATOS POSTGRESQL (NEON)
# ==========================================
DATABASE_URL="postgresql://usuario:password@hostname:5432/vetconnect_favet?schema=public"

# Ejemplo con Neon.tech:
# DATABASE_URL="postgresql://vetconnect_user:password123@ep-cool-cloud-123456.us-east-1.aws.neon.tech/vetconnect_favet?sslmode=require"

# Para conexiones directas (sin pooling):
DIRECT_URL="postgresql://usuario:password@hostname:5432/vetconnect_favet"

# ==========================================
# NEXT.JS
# ==========================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# ==========================================
# AUTENTICACIÓN JWT
# ==========================================
JWT_SECRET="tu-secreto-super-seguro-de-al-menos-32-caracteres"
JWT_EXPIRES_IN="7d"

# ==========================================
# INTEGRACIÓN SII (FACTURACIÓN ELECTRÓNICA)
# ==========================================
SII_AMBIENTE="certificacion" # "certificacion" o "produccion"
SII_RUT_EMPRESA="76123456-7"
SII_CERTIFICADO_PATH="/path/to/certificado.pfx"
SII_CERTIFICADO_PASSWORD="password_certificado"

# ==========================================
# NOTIFICACIONES - WHATSAPP
# ==========================================
WHATSAPP_API_URL="https://api.whatsapp.com/send"
WHATSAPP_API_KEY="tu-api-key-de-whatsapp"
WHATSAPP_PHONE_NUMBER_ID="123456789"

# ==========================================
# NOTIFICACIONES - EMAIL
# ==========================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="notificaciones@vetconnect.cl"
SMTP_PASSWORD="tu-password-smtp"
EMAIL_FROM="VetConnect FAVET <noreply@vetconnect.cl>"

# ==========================================
# ALMACENAMIENTO DE ARCHIVOS (S3 / R2 / Local)
# ==========================================
STORAGE_TYPE="s3" # "s3", "r2", "local"
AWS_ACCESS_KEY_ID="tu-access-key"
AWS_SECRET_ACCESS_KEY="tu-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="vetconnect-favet-files"

# Cloudflare R2 (alternativa a S3):
# R2_ACCOUNT_ID="tu-account-id"
# R2_ACCESS_KEY_ID="tu-r2-access-key"
# R2_SECRET_ACCESS_KEY="tu-r2-secret-key"
# R2_BUCKET_NAME="vetconnect-files"

# ==========================================
# GENERACIÓN DE PDF
# ==========================================
PDF_GENERATOR="puppeteer" # "puppeteer", "react-pdf"

# ==========================================
# LOGS Y MONITOREO
# ==========================================
LOG_LEVEL="info" # "error", "warn", "info", "debug"
SENTRY_DSN="https://tu-sentry-dsn@sentry.io/123456"

# ==========================================
# CONFIGURACIÓN DE CENTROS
# ==========================================
# Número de centros en la red
NEXT_PUBLIC_TOTAL_CENTROS="3"

# IDs de centros
CENTRO_BILBAO_ID="1"
CENTRO_EL_ROBLE_ID="2"
CENTRO_HOSPITAL_ID="3"

# ==========================================
# FEATURES FLAGS
# ==========================================
ENABLE_TELEMEDICINE="true"
ENABLE_ONLINE_BOOKING="true"
ENABLE_WHATSAPP_NOTIFICATIONS="true"
ENABLE_EMAIL_NOTIFICATIONS="true"
ENABLE_SII_INTEGRATION="false"

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="60000"

# ==========================================
# SESSION
# ==========================================
SESSION_SECRET="otro-secreto-super-seguro-para-sesiones"
SESSION_MAX_AGE="604800000" # 7 días en milisegundos

# ==========================================
# CORS
# ==========================================
CORS_ORIGIN="http://localhost:3000,https://vetconnect-favet.vercel.app"

# ==========================================
# UPLOADS
# ==========================================
MAX_FILE_SIZE_MB="10"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/jpg,application/pdf"
